#include <iostream>
#include <string>
#include <ctime>

using namespace std;

class Goods {
public:
	friend class prodavec;
	Goods(string &) ;
	~Goods() {};
	void print() {
		cout << "\nName: " << name << "\nID: " << id << "\nCost: " << cost << endl;
	}
private:
	int id;
	string name;
	float cost;
};

Goods::Goods(string &_name){
	cost = 0;
	name = _name;
	id = rand() % 100;
}

class prodavec {
public:
	void set_cost(Goods &a, float _cost) {
		a.cost = _cost;
	}
};

int main()
{
	srand(time_t(NULL));
	string _name;
	float _cost;
	cout << "\ninput name:";
	cin >> _name;
	Goods a1(_name);
	a1.print();
	cout << "\ninput cost:";
	cin >> _cost;
	prodavec sas;
	sas.set_cost(a1, _cost);
	a1.print();
	cout << "\ninput name:";
	cin >> _name;
	Goods a2(_name);
	a2.print();
	cout << "\ninput cost:";
	cin >> _cost;
	sas.set_cost(a2, _cost);
	a2.print();
}
