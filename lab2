#include <iostream>
#include <string>
#include <ctime>

using namespace std;

class Goods {
	friend void print(Goods);
public:
	friend class prodavec;
	Goods(string&);
	Goods() { cout << "\ntrytocreate\n"; }
	~Goods();
private:
	int id;
	string name;
	float cost;
};

void print(Goods);

Goods::Goods(string& _name) {
	cost = 0;
	name = _name;
	id = rand() % 100;
}

Goods::~Goods() {
	cout << "\n>Destructed<\n";
}

class prodavec {
public:
	void set_cost(Goods& a, float _cost) {
		a.cost = _cost;
	}
};

int main()
{
	srand(time_t(NULL));
	string _name;
	float _cost;
	Goods();
	cout << "\ninput name:";
	cin >> _name;
	Goods a1(_name);
	print(a1);
	cout << "\ninput cost:";
	do {
		rewind(stdin);
	} while (!scanf_s("%f", &_cost) || _cost < 0);
	prodavec sas;
	sas.set_cost(a1, _cost);
	print(a1);
	cout << "\ninput name:";
	cin >> _name;
	Goods a2(_name);
	print(a2);
	cout << "\ninput cost:";
	do {
		rewind(stdin);
	} while (!scanf_s("%f", &_cost) || _cost < 0);
	sas.set_cost(a2, _cost);
	print(a2);
}

void print(Goods _goods) {
	cout << "\nName: " << _goods.name << "\nID: " << _goods.id << "\nCost: " << _goods.cost << endl;
}
